{
	"name": "pcap-ffxiv",
	"version": "1.2.1",
	"description": "A library for capturing FFXIV game packets in JS/TS.",
	"main": "lib/pcap-ffxiv.js",
	"repository": "https://github.com/karashiiro/pcap-ffxiv.git",
	"author": "karashiiro <49822414+karashiiro@users.noreply.github.com>",
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"build:watch": "tsc -w",
		"prepublish": "npm run format && npm run build",
		"format": "prettier . --write",
		"pcap-types:generate": "barrel-generator --sourceFolder=./src/definitions --barrelFileLocation=./src/definitions --barrelFileName=index.ts --includeFile=.ts"
	},
	"files": [
		"lib/"
	],
	"eslintConfig": {
		"extends": [
			"prettier"
		],
		"env": {
			"es11": true
		}
	},
	"prettier": {
		"singleQuote": false,
		"printWidth": 120,
		"semi": true,
		"useTabs": true,
		"trailingComma": "all",
		"endOfLine": "crlf"
	},
	"devDependencies": {
		"@types/node": "^14.14.19",
		"@types/pako": "^1.0.1",
		"barrel-generator": "^1.0.9",
		"eslint": "^7.17.0",
		"eslint-config-prettier": "^7.1.0",
		"prettier": "^2.2.1",
		"typescript": "^4.1.3"
	},
	"dependencies": {
		"cap": "^0.2.1",
		"pako": "^2.0.2"
	}
}
