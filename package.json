{
	"name": "@ffxiv-teamcraft/pcap-ffxiv",
	"version": "1.0.0",
	"description": "A Machina wrapper for FINAL FANTASY XIV packet capture in JS/TS.",
	"main": "lib/pcap-ffxiv.js",
	"repository": "https://github.com/ffxiv-teamcraft/pcap-ffxiv.git",
	"author": "karashiiro <49822414+karashiiro@users.noreply.github.com>",
	"license": "MIT",
	"scripts": {
		"prebuild": "yarn pcap-types:generate && yarn copyfiles && node prebuild.js",
		"build": "yarn prebuild && tsc",
		"build:watch": "yarn prebuild && tsc -w",
		"prepublish": "yarn format && yarn build",
		"format": "prettier . --write",
		"copyfiles": "copyfiles ./MachinaWrapper/* ./lib",
		"pcap-types:generate": "barrelsby -D -d ./src/definitions"
	},
	"files": [
		"lib/"
	],
	"eslintConfig": {
		"extends": [
			"prettier"
		],
		"env": {
			"es11": true
		}
	},
	"prettier": {
		"singleQuote": false,
		"printWidth": 120,
		"semi": true,
		"useTabs": true,
		"trailingComma": "all",
		"endOfLine": "crlf"
	},
	"devDependencies": {
		"@types/node": "^14.14.19",
		"barrelsby": "^2.2.0",
		"copyfiles": "^2.4.1",
		"eslint": "^7.17.0",
		"eslint-config-prettier": "^7.1.0",
		"prettier": "^2.2.1",
		"typescript": "^4.1.3",
		"rxjs": "^6.6.3"
	}
}
